<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.resume.auth.mapper.RoleMapper">

    <insert id="addCompanyAdmin">
        insert into user_role(user_id, role_id) values (#{userId},2)
    </insert>
    <select id="selectUserRole" resultType="java.lang.String">
        select role_name from role where pk_role_id=(select role_id from user_role where user_id=#{userId})
    </select>
</mapper>
